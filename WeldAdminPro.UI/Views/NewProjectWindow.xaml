<Window x:Class="WeldAdminPro.UI.Views.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Project"
        Height="620"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="15">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<!-- Job -->
				<RowDefinition Height="Auto"/>
				<!-- Name -->
				<RowDefinition Height="Auto"/>
				<!-- Client -->
				<RowDefinition Height="Auto"/>
				<!-- Client Rep -->
				<RowDefinition Height="Auto"/>
				<!-- Commercial -->
				<RowDefinition Height="Auto"/>
				<!-- Project -->
				<RowDefinition Height="Auto"/>
				<!-- Dates -->
				<RowDefinition Height="Auto"/>
				<!-- Buttons -->
			</Grid.RowDefinitions>

			<!-- Job Number -->
			<StackPanel Grid.Row="0" Margin="0,0,0,10">
				<TextBlock Text="Job Number" FontWeight="Bold"/>
				<TextBox Text="{Binding Project.JobNumber}"
         IsReadOnly="True"
         Background="#EEE" />
			</StackPanel>

			<!-- Project Name -->
			<StackPanel Grid.Row="1" Margin="0,0,0,10">
				<TextBlock Text="Project Name" FontWeight="Bold"/>
				<TextBox Text="{Binding Project.ProjectName, UpdateSourceTrigger=PropertyChanged}"/>
			</StackPanel>

			<!-- Client -->
			<StackPanel Grid.Row="2" Margin="0,0,0,10">
				<TextBlock Text="Client" FontWeight="Bold"/>
				<TextBox Text="{Binding Project.Client}"/>
			</StackPanel>

			<!-- Client Representative -->
			<StackPanel Grid.Row="3" Margin="0,0,0,10">
				<TextBlock Text="Client Representative" FontWeight="Bold"/>
				<TextBox Text="{Binding Project.ClientRepresentative}"/>
			</StackPanel>

			<!-- Commercial -->
			<Grid Grid.Row="4" Margin="0,0,0,10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0">
					<TextBlock Text="Quote Number" FontWeight="Bold"/>
					<TextBox Text="{Binding Project.QuoteNumber}"/>
				</StackPanel>

				<StackPanel Grid.Column="2">
					<TextBlock Text="Order Number" FontWeight="Bold"/>
					<TextBox Text="{Binding Project.OrderNumber}"/>
				</StackPanel>
			</Grid>

			<!-- Amount -->
			<StackPanel Grid.Row="5" Margin="0,0,0,10">
				<TextBlock Text="Amount (R)" FontWeight="Bold"/>
				<TextBox Text="{Binding Project.Amount}"/>
			</StackPanel>

			<!-- Project Details -->
			<Grid Grid.Row="6" Margin="0,0,0,10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0">
					<TextBlock Text="Material" FontWeight="Bold"/>
					<TextBox Text="{Binding Project.Material}"/>
				</StackPanel>

				<StackPanel Grid.Column="2">
					<TextBlock Text="Assigned To" FontWeight="Bold"/>
					<TextBox Text="{Binding Project.AssignedTo}"/>
				</StackPanel>
			</Grid>
			<StackPanel Grid.Row="6" Margin="0,0,0,10">
				<TextBlock Text="Status" FontWeight="Bold"/>
				<ComboBox ItemsSource="{Binding Statuses}"
	          SelectedItem="{Binding Project.Status}" />
			</StackPanel>


			<!-- Dates -->
			<Grid Grid.Row="7" Margin="0,0,0,15">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0">
					<TextBlock Text="Start Date" FontWeight="Bold"/>
					<DatePicker SelectedDate="{Binding Project.StartDate}"/>
				</StackPanel>

				<StackPanel Grid.Column="2">
					<TextBlock Text="End Date" FontWeight="Bold"/>
					<DatePicker SelectedDate="{Binding Project.EndDate}"/>
				</StackPanel>
			</Grid>

			<!-- Buttons -->
			<StackPanel Grid.Row="8"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"/>
			<Button Content="Save"
                        Margin="235,70,125,-47"
                        Command="{Binding SaveCommand}" Grid.Row="7"/>
			<Button Content="Cancel"
                        Command="{Binding CancelCommand}" Margin="341,70,19,-47" Grid.Row="7"/>
		</Grid>
	</ScrollViewer>
</Window>
