<Window x:Class="WeldAdminPro.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeldAdmin Pro - Login"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Username label -->
            <RowDefinition Height="Auto"/> <!-- Username box -->
            <RowDefinition Height="Auto"/> <!-- Password label -->
            <RowDefinition Height="Auto"/> <!-- Password box -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
            <RowDefinition Height="*"/>    <!-- Error -->
        </Grid.RowDefinitions>

        <TextBlock Text="Username"/>
        <TextBox x:Name="UsernameBox"
                 Grid.Row="1"
                 Height="28"/>

        <TextBlock Grid.Row="2"
                   Text="Password"
                   Margin="0,10,0,0"/>

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="3"
                     Height="28"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Login"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="Login_Click"/>

            <Button Content="Exit"
                    Width="90"
                    Click="Exit_Click"/>
        </StackPanel>

        <TextBlock x:Name="ErrorText"
                   Grid.Row="5"
                   Foreground="Red"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
