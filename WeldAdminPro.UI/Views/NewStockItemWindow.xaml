<Window x:Class="WeldAdminPro.UI.Views.NewStockItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Item"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Item Code label -->
			<RowDefinition Height="Auto"/>
			<!-- Item Code box -->
			<RowDefinition Height="Auto"/>
			<!-- Description label -->
			<RowDefinition Height="Auto"/>
			<!-- Description box -->
			<RowDefinition Height="Auto"/>
			<!-- Category label -->
			<RowDefinition Height="Auto"/>
			<!-- Category combo -->
			<RowDefinition Height="Auto"/>
			<!-- Quantity label -->
			<RowDefinition Height="Auto"/>
			<!-- Quantity box -->
			<RowDefinition Height="Auto"/>
			<!-- Buttons -->
		</Grid.RowDefinitions>

		<!-- Item Code -->
		<TextBlock Text="Item Code"/>
		<TextBox Grid.Row="1"
                 Width="250"
                 Text="{Binding Item.ItemCode}"
                 IsReadOnly="{Binding IsEditMode}"/>

		<!-- Description -->
		<TextBlock Grid.Row="2"
                   Text="Description"
                   Margin="0,10,0,0"/>
		<TextBox Grid.Row="3"
                 Width="250"
                 Text="{Binding Item.Description}"/>

		<!-- Category -->
		<TextBlock Grid.Row="4"
                   Text="Category"
                   Margin="0,10,0,0"/>

		<ComboBox Grid.Row="5"
                  Width="250"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="Name"/>

		<!-- Quantity -->
		<TextBlock Grid.Row="6"
                   Text="Quantity"
                   Margin="0,10,0,0"/>
		<TextBox Grid.Row="7"
                 Width="100"
                 Text="{Binding Item.Quantity}"/>

		<!-- Buttons -->
		<StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
			<Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Margin="5"/>

			<Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Margin="5"/>
		</StackPanel>
	</Grid>
</Window>
