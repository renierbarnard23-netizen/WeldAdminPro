<Window x:Class="WeldAdminPro.UI.Views.NewStockItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Item"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="20"/>
			<ColumnDefinition Width="250"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="15"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="15"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="15"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="25"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Item Code -->
		<TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Item Code"
                   VerticalAlignment="Center"/>

		<TextBox Grid.Row="0" Grid.Column="2"
                 Text="{Binding Item.ItemCode}"
                 IsReadOnly="{Binding IsEditMode}"/>

		<!-- Description -->
		<TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Description"
                   VerticalAlignment="Center"/>

		<TextBox Grid.Row="2" Grid.Column="2"
                 Text="{Binding Item.Description}"/>

		<!-- Quantity -->
		<TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Quantity"
                   VerticalAlignment="Center"/>

		<TextBox Grid.Row="4" Grid.Column="2"
                 Width="100"
                 HorizontalAlignment="Left"
                 Text="{Binding Item.Quantity}"/>

		<!-- Category -->
		<TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Category"
                   VerticalAlignment="Center"/>

		<ComboBox Grid.Row="6" Grid.Column="2"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="Name"/>

		<!-- Buttons -->
		<StackPanel Grid.Row="8" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
			<Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Margin="0,0,10,0"/>

			<Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"/>
		</StackPanel>

	</Grid>
</Window>
