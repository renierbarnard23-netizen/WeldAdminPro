<Window x:Class="WeldAdminPro.UI.Views.NewStockItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Item"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="260"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Item Code -->
			<RowDefinition Height="Auto"/>
			<!-- Description -->
			<RowDefinition Height="Auto"/>
			<!-- Quantity -->
			<RowDefinition Height="Auto"/>
			<!-- Unit -->
			<RowDefinition Height="Auto"/>
			<!-- Min Level -->
			<RowDefinition Height="Auto"/>
			<!-- Max Level -->
			<RowDefinition Height="Auto"/>
			<!-- Unit Cost -->
			<RowDefinition Height="Auto"/>
			<!-- Category -->
			<RowDefinition Height="Auto"/>
			<!-- Buttons -->
		</Grid.RowDefinitions>

		<!-- Item Code -->
		<TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Item Code:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="0" Grid.Column="1"
                 Margin="0,0,0,6"
                 Text="{Binding Item.ItemCode, UpdateSourceTrigger=PropertyChanged}"
                 IsReadOnly="{Binding IsEditMode}"/>

		<!-- Description -->
		<TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Description:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,6"
                 Text="{Binding Item.Description, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Quantity -->
		<TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Quantity:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,6"
                 Width="120"
                 Text="{Binding Item.Quantity, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Unit -->
		<TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Unit:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,6"
                 Width="120"
                 Text="{Binding Item.Unit, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Min Level -->
		<TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Min Level:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,6"
                 Width="120"
                 Text="{Binding Item.MinLevel, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Max Level -->
		<TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Max Level:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="5" Grid.Column="1"
                 Margin="0,0,0,6"
                 Width="120"
                 Text="{Binding Item.MaxLevel, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Unit Cost -->
		<TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Unit Cost (R):"
                   VerticalAlignment="Center"
                   Margin="0,0,10,6"/>

		<TextBox Grid.Row="6" Grid.Column="1"
                 Margin="0,0,0,6"
                 Width="120"
                 Text="{Binding Item.AverageUnitCost, UpdateSourceTrigger=PropertyChanged}"/>

		<!-- Category -->
		<TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Category:"
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>

		<ComboBox Grid.Row="7" Grid.Column="1"
                  Margin="0,0,0,10"
                  ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="Name"/>

		<!-- Buttons -->
		<StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

			<Button Content="Save"
                    Width="100"
                    Margin="0,0,8,0"
                    Command="{Binding SaveCommand}"/>

			<Button Content="Cancel"
                    Width="100"
                    Command="{Binding CancelCommand}"/>
		</StackPanel>

	</Grid>
</Window>
