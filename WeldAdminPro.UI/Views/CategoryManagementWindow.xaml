<Window x:Class="WeldAdminPro.UI.Views.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Categories"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ADD CATEGORY -->
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200"
                     Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>

            <Button Content="Add"
                    Width="80"
                    Command="{Binding AddCategoryCommand}"/>
        </StackPanel>

        <!-- CATEGORY LIST -->
        <ListBox Grid.Row="2"
                 Height="200"
                 ItemsSource="{Binding Categories}"
                 SelectedItem="{Binding SelectedCategory}"
                 DisplayMemberPath="Name"/>

        <!-- ACTION BUTTONS -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Enable"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding EnableCategoryCommand}"/>

            <Button Content="Disable"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding DisableCategoryCommand}"/>

            <Button Content="Delete"
                    Width="80"
                    Command="{Binding DeleteCategoryCommand}"/>
        </StackPanel>
    </Grid>
</Window>
