<Window x:Class="WeldAdminPro.UI.Views.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Categories"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Category List -->
        <DataGrid ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*"/>

                <DataGridCheckBoxColumn Header="Active"
                                        Binding="{Binding IsActive}"
                                        Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Enable"
                    Width="100"
                    Margin="5"
                    Command="{Binding EnableCommand}"/>

            <Button Content="Disable"
                    Width="100"
                    Margin="5"
                    Command="{Binding DisableCommand}"/>
        </StackPanel>
    </Grid>
</Window>
