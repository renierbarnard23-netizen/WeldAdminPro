<Window x:Class="WeldAdminPro.UI.Views.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Categories"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="220" />
			</Grid.ColumnDefinitions>

			<!-- CATEGORY LIST -->
			<DataGrid ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Grid.Column="0"
                      Margin="0,0,10,0">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Category"
                                        Binding="{Binding Name}"
                                        Width="*" />
					<DataGridCheckBoxColumn Header="Active"
                                            Binding="{Binding IsActive}"
                                            Width="80" />
				</DataGrid.Columns>
			</DataGrid>

			<!-- ACTIONS -->
			<StackPanel Grid.Column="1">

				<TextBlock Text="Add Category" FontWeight="Bold" />
				<TextBox Text="{Binding NewCategoryName}" Margin="0,5,0,5"/>
				<Button Content="Add"
                        Command="{Binding AddCategoryCommand}"
                        Margin="0,0,0,10"/>

				<Separator />

				<TextBlock Text="Rename Category" FontWeight="Bold" Margin="0,10,0,0"/>
				<TextBox Text="{Binding RenameCategoryName}" Margin="0,5,0,5"/>
				<Button Content="Rename"
                        Command="{Binding RenameCategoryCommand}"
                        Margin="0,0,0,10"/>

				<Separator />

				<Button Content="Disable Category"
                        Command="{Binding DisableCategoryCommand}"
                        Foreground="White"
                        Background="Firebrick"/>
			</StackPanel>
		</Grid>

		<Button Grid.Row="1"
                Content="Close"
                HorizontalAlignment="Right"
                Width="80"
                Margin="0,10,0,0"
                Click="Close_Click"/>
	</Grid>
</Window>
