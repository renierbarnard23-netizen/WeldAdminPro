<Window x:Class="WeldAdminPro.UI.Views.StockInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock IN"
        Height="350"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

	<Grid Margin="20">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="130"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Item -->
		<TextBlock Text="Stock Item"/>
		<ComboBox Grid.Column="1"
                  ItemsSource="{Binding StockItems}"
                  SelectedItem="{Binding SelectedStockItem}"
                  DisplayMemberPath="Description"/>

		<!-- Quantity -->
		<TextBlock Grid.Row="1" Text="Quantity" Margin="0,10,0,0"/>
		<TextBox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,10,0,0"
                 Text="{Binding Quantity}"/>

		<!-- Unit Cost -->
		<TextBlock Grid.Row="2" Text="Unit Cost (R)" Margin="0,10,0,0"/>
		<TextBox Grid.Row="2"
                 Grid.Column="1"
                 Margin="0,10,0,0"
                 Text="{Binding UnitCost}"/>

		<!-- Reference -->
		<TextBlock Grid.Row="3" Text="Reference" Margin="0,10,0,0"/>
		<TextBox Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,10,0,0"
                 Text="{Binding Reference}"/>

		<!-- Buttons -->
		<StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

			<Button Content="Save"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"/>

			<Button Content="Cancel"
                    Width="100"
                    Command="{Binding CancelCommand}"/>
		</StackPanel>

	</Grid>
</Window>
