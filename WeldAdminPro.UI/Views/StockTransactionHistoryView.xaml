<UserControl x:Class="WeldAdminPro.UI.Views.StockTransactionHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Transactions}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">

            <DataGrid.Columns>

                <!-- Date -->
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding TransactionDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />

                <!-- Item Code -->
                <DataGridTextColumn Header="Item Code"
                                    Binding="{Binding ItemCode}" />

                <!-- Description -->
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding ItemDescription}" />

                <!-- Type -->
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding Type}" />

                <!-- Quantity (colour coded + sign) -->
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding QuantityDisplay}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground"
                                    Value="{Binding QuantityColor}" />
                            <Setter Property="FontWeight"
                                    Value="SemiBold" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Running Balance (bold) -->
                <DataGridTextColumn Header="Balance"
                                    Binding="{Binding RunningBalance}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Reference -->
                <DataGridTextColumn Header="Reference"
                                    Binding="{Binding Reference}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
