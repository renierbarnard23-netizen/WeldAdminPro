<UserControl x:Class="WeldAdminPro.UI.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel Margin="10">

        <!-- TOP BAR -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">

            <Button Content="New Project"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding NewProjectCommand}" />

            <Button Content="Open"
                    Width="80"
                    Height="35"
                    Command="{Binding OpenProjectCommand}" />
        </StackPanel>

        <!-- PROJECT LIST -->
<DataGrid ItemsSource="{Binding Projects}"
          SelectedItem="{Binding SelectedProject}"
          AutoGenerateColumns="False">

    <DataGrid.Columns>

        <DataGridTextColumn
            Header="Project Number"
            Binding="{Binding ProjectNumber}" />

        <DataGridTextColumn
            Header="Project Name"
            Binding="{Binding ProjectName}" />

        <DataGridTextColumn
            Header="Start Date"
            Binding="{Binding StartDate, StringFormat=d}" />

        <DataGridTextColumn
            Header="End Date"
            Binding="{Binding EndDate, StringFormat=d}" />

    </DataGrid.Columns>
</DataGrid>

    </DockPanel>
</UserControl>
