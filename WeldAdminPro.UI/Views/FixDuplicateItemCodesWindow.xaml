<Window x:Class="WeldAdminPro.UI.Views.FixDuplicateItemCodesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fix Duplicate Item Codes"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<DataGrid ItemsSource="{Binding Duplicates}"
		          AutoGenerateColumns="False"
		          IsReadOnly="False"
		          Height="280"
		          Width="520">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Current Code"
				                    Binding="{Binding ItemCode}"
				                    IsReadOnly="True"
				                    Width="*"/>

				<DataGridTextColumn Header="New Code"
				                    Binding="{Binding ProposedItemCode}"
				                    Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="1"
		            Orientation="Horizontal"
		            HorizontalAlignment="Right"
		            Margin="0,12,0,0">

			<Button Content="Apply Fixes"
			        Width="120"
			        Margin="0,0,8,0"
			        Command="{Binding ApplyFixesCommand}"/>

			<Button Content="Cancel"
			        Width="120"
			        IsCancel="True"
			        Command="{Binding CancelCommand}"/>
		</StackPanel>
	</Grid>
</Window>
