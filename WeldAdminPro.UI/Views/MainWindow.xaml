<Window x:Class="WeldAdminPro.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WeldAdminPro.UI.Views"
        Title="WeldAdmin Pro"
        Height="700"
        Width="1100">

    <DockPanel>

        <!-- TOP MENU -->
        <Menu DockPanel.Dock="Top">
    		<MenuItem Header="Home" Click="Home_Click"/>
    		<MenuItem Header="Projects" Click="Projects_Click"/>
    		<MenuItem Header="Stock" Click="Stock_Click"/>
    		<MenuItem Header="Reports" Click="Reports_Click"/>
    		<MenuItem Header="Exit" Click="Exit_Click"/>
	</Menu>


        <!-- MAIN CONTENT HOST -->
        <ContentControl x:Name="MainContent"/>
        
    </DockPanel>
</Window>
