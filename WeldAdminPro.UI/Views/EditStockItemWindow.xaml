<Window x:Class="WeldAdminPro.UI.Views.EditStockItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Stock Item"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="240"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Item Code:" Grid.Row="0" Margin="0,0,8,6"/>
		<TextBox Text="{Binding ItemCode}" Grid.Row="0" Grid.Column="1"/>

		<TextBlock Text="Description:" Grid.Row="1" Margin="0,0,8,6"/>
		<TextBox Text="{Binding Description}" Grid.Row="1" Grid.Column="1"/>

		<TextBlock Text="Quantity:" Grid.Row="2" Margin="0,0,8,6"/>
		<TextBox Text="{Binding Quantity}" Grid.Row="2" Grid.Column="1"/>

		<TextBlock Text="Unit:" Grid.Row="3" Margin="0,0,8,6"/>
		<TextBox Text="{Binding Unit}" Grid.Row="3" Grid.Column="1"/>

		<TextBlock Text="Min Level:" Grid.Row="4" Margin="0,0,8,6"/>
		<TextBox Text="{Binding MinLevel}" Grid.Row="4" Grid.Column="1"/>

		<TextBlock Text="Max Level:" Grid.Row="5" Margin="0,0,8,6"/>
		<TextBox Text="{Binding MaxLevel}" Grid.Row="5" Grid.Column="1"/>

		<TextBlock Text="Category:" Grid.Row="6" Margin="0,0,8,6"/>
		<ComboBox ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding Category}"
                  Grid.Row="6"
                  Grid.Column="1"/>

		<StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">

			<Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="80"
                    Margin="0,0,8,0"/>

			<Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="80"/>
		</StackPanel>
	</Grid>
</Window>
