using System;
using System.Windows.Input;
using CommunityToolkit.Mvvm.ComponentModel;

namespace WeldAdminPro.UI.ViewModels
{
    /// <summary>
    /// Simple navigation item used by the left nav.
    /// Glyph should be a MDL2 glyph string (e.g. "\uE700") or character.
    /// Command is optional and may be set by the MainViewModel when constructing the nav items.
    /// </summary>
    public class NavItem : ObservableObject
    {
        public NavItem() { }

        public NavItem(string title, string glyph = "", ICommand? command = null)
        {
            Id = Guid.NewGuid().ToString();
            Title = title;
            Glyph = glyph;
            Command = command;
        }

        public string Id { get; set; } = Guid.NewGuid().ToString();

        public string Title { get; set; } = string.Empty;

        /// <summary>
        /// MDL2 glyph (as string) or font glyph char. Use FontFamily="Segoe MDL2 Assets" in XAML.
        /// Example codes I'll suggest: "\uE82D" (View), "\uE8A5" (Book), "\uE8F1" (Document), "\uE8B8" (Report)
        /// </summary>
        public string Glyph { get; set; } = string.Empty;

        public ICommand? Command { get; set; }

        private bool _isSelected;
        public bool IsSelected
        {
            get => _isSelected;
            set => SetProperty(ref _isSelected, value);
        }
    }
}
